{
  "compilerOptions": {
    /* Output */
    "outDir": "./dist",
    "rootDir": "./src",

    /* Language and Environment */
    "target": "ES2020",
    "module": "CommonJS",

    /* Module Resolution */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Strictness */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,

    /* Source Maps */
    "sourceMap": true,

    /* Node.js Types */
    "types": ["node"]
  },

  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
